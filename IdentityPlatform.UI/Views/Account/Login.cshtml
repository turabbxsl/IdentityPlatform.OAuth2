@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Identity Platform</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Inter', sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        .login-card {
            border: none;
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            width: 100%;
            max-width: 400px;
            padding: 2rem;
            background: #fff;
        }

        .btb-red {
            color: #e31e24;
        }

        .btn-btb {
            background-color: #e31e24;
            color: white;
            border-radius: 8px;
            padding: 12px;
            font-weight: 600;
            transition: 0.3s;
        }

            .btn-btb:hover {
                background-color: #b3161b;
                color: white;
                transform: translateY(-2px);
            }

        .form-control {
            border-radius: 8px;
            padding: 12px;
            border: 1px solid #dee2e6;
        }

            .form-control:focus {
                box-shadow: 0 0 0 0.25rem rgba(227, 30, 36, 0.1);
                border-color: #e31e24;
            }

        .client-info {
            background: #fff5f5;
            padding: 10px;
            border-radius: 8px;
            font-size: 0.9rem;
            margin-bottom: 20px;
            border-left: 4px solid #e31e24;
        }
    </style>
</head>
<body>

    <div class="login-card">
        <div class="text-center mb-4">
            <h3 class="fw-bold btb-red">Identity Platform</h3>
            <p class="text-muted small">Secure login system</p>
        </div>

        @if (Model != null)
        {
            <div class="client-info text-center">
                You are logging in to <strong>@Model.ClientName</strong> application.
            </div>
        }

        <form asp-action="Login" method="post">
            <input type="hidden" asp-for="ClientId" />
            <input type="hidden" asp-for="ClientName" />
            <input type="hidden" asp-for="RedirectUri" />

            <div class="mb-3">
                <label class="form-label text-secondary">Registration Number</label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-person"></i></span>
                    <input asp-for="RegNumber" type="text" class="form-control border-start-0" placeholder="100001" required />
                </div>
            </div>

            <div class="mb-4">
                <label class="form-label text-secondary">Password</label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-lock"></i></span>
                    <input asp-for="Password" type="password" class="form-control border-start-0" placeholder="••••••" required />
                </div>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger py-2 small">
                    <div asp-validation-summary="ModelOnly"></div>
                </div>
            }

            <button type="submit" class="btn btn-btb w-100 mb-3">Login</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
